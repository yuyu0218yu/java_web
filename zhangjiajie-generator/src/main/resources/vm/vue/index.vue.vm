<template>
  <div class="${businessName}-container">
    <!-- 搜索表单 -->
    <el-card class="search-card" shadow="never">
      <el-form :model="queryParams" inline>
#foreach($column in $queryColumns)
#if($column.htmlType == 'input')
        <el-form-item label="$column.columnComment">
          <el-input v-model="queryParams.$column.javaField" placeholder="请输入$column.columnComment" clearable />
        </el-form-item>
#elseif($column.htmlType == 'select')
        <el-form-item label="$column.columnComment">
          <el-select v-model="queryParams.$column.javaField" placeholder="请选择$column.columnComment" clearable>
            <el-option label="选项1" value="1" />
            <el-option label="选项2" value="2" />
          </el-select>
        </el-form-item>
#elseif($column.htmlType == 'radio')
        <el-form-item label="$column.columnComment">
          <el-select v-model="queryParams.$column.javaField" placeholder="请选择$column.columnComment" clearable>
            <el-option label="启用" :value="1" />
            <el-option label="禁用" :value="0" />
          </el-select>
        </el-form-item>
#elseif($column.htmlType == 'datetime')
        <el-form-item label="$column.columnComment">
          <el-date-picker v-model="queryParams.$column.javaField" type="daterange" placeholder="请选择$column.columnComment" />
        </el-form-item>
#end
#end
        <el-form-item>
          <el-button type="primary" :icon="Search" @click="handleQuery">搜索</el-button>
          <el-button :icon="Refresh" @click="resetQuery">重置</el-button>
        </el-form-item>
      </el-form>
    </el-card>

    <!-- 数据表格 -->
    <el-card class="table-card" shadow="never">
      <div class="toolbar">
        <el-button type="primary" :icon="Plus" @click="handleAdd">新增</el-button>
        <el-button type="danger" :icon="Delete" :disabled="!selectedIds.length" @click="handleDeleteBatch">批量删除</el-button>
      </div>

      <el-table v-loading="loading" :data="tableData" @selection-change="handleSelectionChange" border stripe>
        <el-table-column type="selection" width="55" />
#foreach($column in $listColumns)
#if($column.htmlType == 'radio')
        <el-table-column prop="$column.javaField" label="$column.columnComment" width="100">
          <template #default="{ row }">
            <el-tag :type="row.$column.javaField === 1 ? 'success' : 'danger'">
              {{ row.$column.javaField === 1 ? '启用' : '禁用' }}
            </el-tag>
          </template>
        </el-table-column>
#elseif($column.htmlType == 'datetime')
        <el-table-column prop="$column.javaField" label="$column.columnComment" width="180" />
#else
        <el-table-column prop="$column.javaField" label="$column.columnComment" show-overflow-tooltip />
#end
#end
        <el-table-column label="操作" width="180" fixed="right">
          <template #default="{ row }">
            <el-button type="primary" link :icon="Edit" @click="handleEdit(row)">编辑</el-button>
            <el-popconfirm title="确定删除？" @confirm="handleDelete(row.id)">
              <template #reference>
                <el-button type="danger" link :icon="Delete">删除</el-button>
              </template>
            </el-popconfirm>
          </template>
        </el-table-column>
      </el-table>

      <el-pagination
        v-model:current-page="queryParams.current"
        v-model:page-size="queryParams.size"
        :page-sizes="[10, 20, 50, 100]"
        :total="total"
        layout="total, sizes, prev, pager, next, jumper"
        @size-change="fetchData"
        @current-change="fetchData"
      />
    </el-card>

    <!-- 新增/编辑弹窗 -->
    <el-dialog v-model="dialogVisible" :title="dialogTitle" width="600px">
      <el-form ref="formRef" :model="form" :rules="rules" label-width="100px">
#foreach($column in $editColumns)
#if(!$column.isPk() && !$column.isSuperColumn())
#if($column.htmlType == 'input')
        <el-form-item label="$column.columnComment" prop="$column.javaField">
          <el-input v-model="form.$column.javaField" placeholder="请输入$column.columnComment" />
        </el-form-item>
#elseif($column.htmlType == 'textarea')
        <el-form-item label="$column.columnComment" prop="$column.javaField">
          <el-input v-model="form.$column.javaField" type="textarea" :rows="3" placeholder="请输入$column.columnComment" />
        </el-form-item>
#elseif($column.htmlType == 'select')
        <el-form-item label="$column.columnComment" prop="$column.javaField">
          <el-select v-model="form.$column.javaField" placeholder="请选择$column.columnComment">
            <el-option label="选项1" value="1" />
            <el-option label="选项2" value="2" />
          </el-select>
        </el-form-item>
#elseif($column.htmlType == 'radio')
        <el-form-item label="$column.columnComment" prop="$column.javaField">
          <el-radio-group v-model="form.$column.javaField">
            <el-radio :value="1">启用</el-radio>
            <el-radio :value="0">禁用</el-radio>
          </el-radio-group>
        </el-form-item>
#elseif($column.htmlType == 'datetime')
        <el-form-item label="$column.columnComment" prop="$column.javaField">
          <el-date-picker v-model="form.$column.javaField" type="datetime" placeholder="请选择$column.columnComment" />
        </el-form-item>
#end
#end
#end
      </el-form>
      <template #footer>
        <el-button @click="dialogVisible = false">取消</el-button>
        <el-button type="primary" @click="handleSubmit">确定</el-button>
      </template>
    </el-dialog>
  </div>
</template>

<script setup>
import { ref, reactive, onMounted } from 'vue'
import { ElMessage, ElMessageBox } from 'element-plus'
import { Search, Refresh, Plus, Edit, Delete } from '@element-plus/icons-vue'
import { ${businessName}Api } from '@/api/${moduleName}/${businessName}'

// 查询参数
const queryParams = reactive({
  current: 1,
  size: 10,
#foreach($column in $queryColumns)
  $column.javaField: null,
#end
})

// 表格数据
const loading = ref(false)
const tableData = ref([])
const total = ref(0)
const selectedIds = ref([])

// 弹窗
const dialogVisible = ref(false)
const dialogTitle = ref('')
const formRef = ref(null)
const form = reactive({
#foreach($column in $editColumns)
#if(!$column.isPk() && !$column.isSuperColumn())
  $column.javaField: null,
#end
#end
})

// 表单校验规则
const rules = {
#foreach($column in $editColumns)
#if($column.isRequired() && !$column.isPk() && !$column.isSuperColumn())
  $column.javaField: [{ required: true, message: '请输入$column.columnComment', trigger: 'blur' }],
#end
#end
}

onMounted(() => {
  fetchData()
})

// 获取数据
async function fetchData() {
  loading.value = true
  try {
    const res = await ${businessName}Api.getPage(queryParams)
    if (res.data.code === 200) {
      tableData.value = res.data.data.records
      total.value = res.data.data.total
    }
  } finally {
    loading.value = false
  }
}

// 搜索
function handleQuery() {
  queryParams.current = 1
  fetchData()
}

// 重置
function resetQuery() {
#foreach($column in $queryColumns)
  queryParams.$column.javaField = null
#end
  handleQuery()
}

// 选择
function handleSelectionChange(selection) {
  selectedIds.value = selection.map(item => item.id)
}

// 新增
function handleAdd() {
  resetForm()
  dialogTitle.value = '新增${functionName}'
  dialogVisible.value = true
}

// 编辑
function handleEdit(row) {
  resetForm()
  Object.assign(form, row)
  dialogTitle.value = '编辑${functionName}'
  dialogVisible.value = true
}

// 提交
async function handleSubmit() {
  await formRef.value.validate()
  if (form.id) {
    await ${businessName}Api.update(form.id, form)
    ElMessage.success('更新成功')
  } else {
    await ${businessName}Api.create(form)
    ElMessage.success('创建成功')
  }
  dialogVisible.value = false
  fetchData()
}

// 删除
async function handleDelete(id) {
  await ${businessName}Api.delete(id)
  ElMessage.success('删除成功')
  fetchData()
}

// 批量删除
async function handleDeleteBatch() {
  await ElMessageBox.confirm('确定删除选中的数据？', '提示', { type: 'warning' })
  await ${businessName}Api.deleteBatch(selectedIds.value)
  ElMessage.success('删除成功')
  fetchData()
}

// 重置表单
function resetForm() {
  form.id = null
#foreach($column in $editColumns)
#if(!$column.isPk() && !$column.isSuperColumn())
  form.$column.javaField = null
#end
#end
}
</script>

<style scoped>
.${businessName}-container {
  padding: 20px;
}
.search-card {
  margin-bottom: 16px;
}
.toolbar {
  margin-bottom: 16px;
}
.el-pagination {
  margin-top: 16px;
  justify-content: flex-end;
}
</style>
